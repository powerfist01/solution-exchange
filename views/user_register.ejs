<!DOCTYPE HTML>
<html>

<head>
    <title>Soluge</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="../css/main.css" />
</head>

<body class="homepage is-preload">
    <div id="page-wrapper">

        <section id="header" class="wrapper">
                <!-- Nav -->
                <nav id="nav">
                    <ul>
                        <li><a href="/">Welcome</a></li>
                        <li><a href="/user/register">User SignUP</a></li>
                        <li><a href="/user/login">User login</a></li>
                        <li><a href="/expert/login">Experts login</a></li>
                    </ul>
                </nav>
        </section>
        
        <!-- Main -->
        <section id="main" class="wrapper style2">
            <div class="container">
                <div class="row">
                    <div class="col-3 col-4-medium">
    
                    </div>

                    <div class="col-6 col-12-small">
                        
                        <section>
                            <form method="post" action="/user/register">
                                <div class="row gtr-50">
                                    <div class="col-12 col-12-small">
                                        <input type="text" name="username" id="username" placeholder="Username" value="<%= typeof username != 'undefined' ? username : '' %>"/>
                                    </div>
                                    <div class="col-12 col-12-small">
                                        <input type="email" name="email" id="email" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>"/>
                                    </div>
                                    <div class="col-12 col-12-small">
                                        <input type="text" name="phone" id="phone" placeholder="Phone Number" value="<%= typeof phone != 'undefined' ? phone : '' %>"/>
                                    </div>
                                    <div class="col-12 col-12-small">
                                        <input type="password" name="password" id="password" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>"/>
                                    </div>
                                    <div class="col-12 col-12-small">
                                        <input type="password" name="password2" id="password2" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
                                    </div>
                                    <div class="col-12">
                                        <ul class="actions">
                                            <li><input type="submit" class="style1" value="Register" /></li>
                                            <li><input type="reset" class="style2" value="Reset" /></li>
                                        </ul>
                                    </div>
                                </div>
                            </form>
                            <h3 class="solid">Already have an account? <a href="/user/login">Login here</a></h3>
                        </section>
                    </div>
                    
                </div>
            </div>
        </section>

        <section id="footer">
            <div id="copyright">
                <ul>
                    <li>&copy; Soluge</li><li>All rights reserved.</a></li>
                </ul>
            </div>
        </section>
    </div>
<!-- Scripts -->
<script src="../js/jquery.min.js"></script>
<script src="../js/jquery.dropotron.min.js"></script>
<script src="../js/browser.min.js"></script>
<script src="../js/breakpoints.min.js"></script>
<script src="../js/util.js"></script>
<script src="../js/main.js"></script>
</body>

</html>